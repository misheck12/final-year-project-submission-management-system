<%= form_with(model: project, class: "form-container", local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h4>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter project title" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Describe the project" %>
  </div>

  <div class="form-group">
    <%= form.label :goals %>
    <%= form.text_area :goals, class: "form-control", rows: 5, placeholder: "List down the project goals" %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.date_field :deadline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :document %>
    <%= form.file_field :document, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save Project", class: "btn btn-primary mr-2" %>
    <%= link_to 'Cancel', projects_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
