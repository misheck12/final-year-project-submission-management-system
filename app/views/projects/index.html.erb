<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<div id="projects">
  <% @projects.each do |project| %>
    <%= render project %>
    <p>
      <%= link_to "Show this project", project %>
      <% if project.document.attached? %>
        <%= link_to "Download document", url_for(project.document) %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New project", new_project_path %>
