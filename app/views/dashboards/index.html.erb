<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4>Projects</h4>
        </div>
        <div class="card-body">
          <ul>
            <% @projects.each do |project| %>
              <li><%= link_to project.title, project_path(project) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4>Tasks</h4>
        </div>
        <div class="card-body">
          <ul>
            <% @tasks.each do |task| %>
              <li><%= link_to task.name, task_path(task) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4>Teams</h4>
        </div>
        <div class="card-body">
          <ul>
            <% @teams.each do |team| %>
              <li><%= link_to team.name, team_path(team) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
