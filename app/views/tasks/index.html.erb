<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Deadline</th>
      <th scope="col">Project</th>
      <th scope="col">Team</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.project.title %></td>
        <td><%= task.team.name %></td>
        <td>
          <%= link_to 'Show', task, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
