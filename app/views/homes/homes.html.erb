  <div class="container">
    <h1 class="jumbotron-heading">Welcome to ICU-FYPMS</h1>
    <p class="lead">The ultimate solution for managing final year projects at ICU.</p>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-light btn-lg mr-2' %>
